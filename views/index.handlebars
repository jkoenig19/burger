<div class="container-fluid">
    <img src="/assets/img/burger-2645563_640.png" id="burger_image" width="200px" alt="Burger">
    <br>
    <h1>Eat-Da-Burger!</h1>

    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-4">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
                <p class="burger_list border pt-1">{{id}}. {{burger_name}}</p>
                <button class="devour_burger" data-id="{{id}}">Devour it!</button>
                <br>
            {{/unless}}
            {{/each}}
        </ul>
        </div>
        <div class="col-md-4">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
                <p class="devoured_list border pl-3 m-0">{{id}}. {{burger_name}}</p>
            {{/if}}
            {{/each}}
        </ul>
        </div>
        <div class="col-md-2"></div>
    </div>

    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
        <form class="create-form">
            <div class="form-group">
            <textarea class="form-control" id="burger" rows="2"></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <br>
            <br>
            <p>Enter a burger you want to eat. Then click the "Submit" button.</p>
        </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>